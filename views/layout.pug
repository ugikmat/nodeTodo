doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/css/bootstrap.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='#') Navbar
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='/')| Home
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='/todos/add') Add Todo
        form.form-inline.my-2.my-lg-0(method='POST', action='/todos/search')
          input.form-control.mr-sm-2(name='cari', type='text', placeholder='Search', aria-label='Search')
          input.btn.btn-outline-success.my-2.my-sm-0(type='submit', value='Search')
    br
    .container
      !=messages('message',local)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2018
    script(src='/js/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/popper.js')
    script(src='/js/main.js')
